<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutApp.RegistrationPage"
             Title="Registration">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Register" FontSize="24" HorizontalOptions="Center" />
            <Entry x:Name="UsernameEntry" Placeholder="Username" />
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
            <Button Text="Register" Clicked="OnRegisterButtonClicked" />

            <Button Text="Already have account? Login" Clicked="OnLoginButtonClicked" />
        </VerticalStackLayout>
        
        
        
        
    </ScrollView>
</ContentPage>
