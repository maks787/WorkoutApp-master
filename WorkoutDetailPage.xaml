<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutApp.WorkoutDetailPage"
             Title="Workout Detail"
             BackgroundColor="White">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <!-- Add workout details here -->
            <Label Text="Workout Details"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />
            <!-- Example workout details -->
            <Label Text="Workout Name: Full Body Workout"
                   FontSize="18"
                   Margin="0,10,0,0" />
            <Label Text="Description: A complete workout for your whole body."
                   FontSize="18"
                   Margin="0,10,0,0" />
            <Label Text="Duration: 45 minutes"
                   FontSize="18"
                   Margin="0,10,0,0" />
            <!-- Add more workout details as needed -->
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
