<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutApp.UserDetailsPage"
             Title="User Details">

    <StackLayout Padding="10">
        <Label Text="Age" />
        <Entry x:Name="AgeEntry" Text="{Binding Age}" Keyboard="Numeric" />

        <Label Text="Weight" />
        <Entry x:Name="WeightEntry" Text="{Binding Weight}" Keyboard="Numeric" />

        <Label Text="Height" />
        <Entry x:Name="HeightEntry" Text="{Binding Height}" Keyboard="Numeric" />

        <Button Text="Save" Clicked="OnSaveButtonClicked" />
    </StackLayout>
</ContentPage>
